{
  "ts-node": {
    "esm": true
  },

  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "types": [
      "node",
      "express",
      "reflect-metadata",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/common.type"
    ],
    "lib": [
      "dom",
      "es6",
      "webworker"
    ],

    "allowJs": true,
    "checkJs": true, 
    "strict": true,
    "importHelpers": true,
    "esModuleInterop": true,  
    "allowSyntheticDefaultImports": true,

    "noUnusedLocals": true,
    "noUnusedParameters": false,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "declaration": true,   
    "declarationMap": true,
    "sourceMap": true,

    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": ["src/**/*.ts", "src/**/*.json", ".env", "jest.config.js"],
  "exclude": ["node_modules", "@logs", "src/test"]

}